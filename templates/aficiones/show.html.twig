{% extends 'base.html.twig' %}

{% block title %}Aficiones{% endblock %}

{% block body %}
<div class="contenedor">
    <header>    
        <h1>Aficiones</h1>
    </header>
    <main>
    <table class="tabla">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ aficione.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ aficione.Nombre }}</td>
            </tr>
        </tbody>
    </table>
     <div class="caja-secundaria">
        <div class="caja-btn">
            <a href="{{ path('aficiones_index') }}" class="btn btn-block btn-primary">Volver</a>
        </div>
        <div class="caja-btn">
            <a href="{{ path('aficiones_edit', {'id': aficione.id}) }}" class="btn btn-block btn-primary">Editar</a>
        </div>
        <div class="caja-btn">
            {{ include('aficiones/_delete_form.html.twig') }}
        </div>
    </div>
    </main>
</div>
{% endblock %}
