<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Bienvenido!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
			<link rel="stylesheet" href="{{ asset('css/estilos.css') }}">
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			{# Modificado 15.2.2020 #}
			{% if app.user != null %}
				<a class="navbar-brand activo" href="{{ path('home') }}">Página principal</a>
			{% else %}
				<a class="navbar-brand activo" href="{{ path('index') }}">Página principal</a>
			{% endif %}
			<ul class="navbar-nav mr-auto">
				{# Modificado 11.2.2020 #}
				{% if app.user == null %}
					<li class="nav-item">
						<a class="nav-link" href="{{ path('usuarios_new') }}">Formulario</a>
					</li>
				{% endif %}
					{% if app.user != null %}
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('usuarios') }}">Usuarios</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('ciudades') }}">Ciudades</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('aficiones') }}">Aficiones</a>
						</li>
						{% endif %}
					{% endif %}
        		</ul>
					{# Modificado 6.2.2020 #}
          		<ul class="navbar-nav ml-auto">	
				  {% if app.user != null %}
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
            			<li class="nav-item">
							<a class="nav-link" href="{{ path('app_register') }}">Registrar</a>
						</li>
						<li class="nav-item">
								<p class="nav-link active">{{ app.user.email }}</p>
						</li>
						{% endif %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}">Cerrar Sesión</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_login') }}">Login</a>
						</li>
					{% endif %}
				</ul>
			{# </div> #}
		</nav>
		<div class="contenedor">
			{# Modificado 12.2.2020 #}
			{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
			{% endfor %}
			{% for message in app.flashes('error') %}
					<div class="alert alert-warning">
						{{ message }}
					</div>
			{% endfor %}
		</div>

		
		

		{% block body %}
		
			<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
		{% endblock %}
		{% block javascripts %}{% endblock %}
		<footer>
			<section class="redes-sociales">
				<div class="contenedor">
					<p>&copy; 2020 Yuriy Mraka - Achraf Arazzouk - Alejandro Navaroli DW2A</p>
				</div>
			</section>
		</footer>
	</body>
</html>
