{% extends 'base.html.twig' %}

{% block title %}Ciudades{% endblock %}

{% block body %}
<div class="contenedor">
    <header>
        <h1>Ciudades</h1>
    </header>
    <main>
    <table class="tabla">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ciudade.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ ciudade.Nombre }}</td>
            </tr>
        </tbody>
    </table>

    <div class="caja-secundaria">
        <div class="caja-btn">
            <a href="{{ path('ciudades_index') }}" class="btn btn-block btn-primary">Volver</a>
        </div>
        <div class="caja-btn">
            <a href="{{ path('ciudades_edit', {'id': ciudade.id}) }}" class="btn btn-block btn-primary">Editar</a>
        </div>
        <div class="caja-btn">
            {{ include('ciudades/_delete_form.html.twig') }}
        </div>
    </div>
    </main>
</div>
{% endblock %}
