{% extends 'base.html.twig' %}

{% block title %}Usuarios{% endblock %}
{% block stylesheets %}
    {{ parent() }}

    {# <link rel="stylesheet" href="{{ asset('css/estilos.css') }}"> #}
{% endblock %}
{% block body %}
<div class="contenedor">
    <header>
        <h1>Usuarios</h1>
    </header>
    <main>
        <table class="tabla">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Más datos</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for usuario in usuarios %}
                <tr>
                    <td>{{ usuario.Nombre }}</td>
                    <td>{{ usuario.Apellidos }}</td>
                    <td>{{ "..." }}</td>
                    <td> 
                        <a href="{{ path('usuarios_show', {'id': usuario.id}) }}" class="btn btn-primary">Mostrar</a>
                        <a href="{{ path('usuarios_edit', {'id': usuario.id}) }}" class="btn btn-primary">Editar</a>
                        <div class="caja-btn">
                            {{ include('usuarios/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
                
            {% else %}
                <tr>
                    <td colspan="6">No hay información en la BBDD</td>
                </tr>
            {% endfor %}
                <tr>
                    <td>
                        <a href="{{ path('usuarios_new') }}" class="btn btn-primary">Agregar nuevo</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </main>
</div>
    {# <a href="{{ path('usuarios_new') }}">Create new</a> #}
{% endblock %}
